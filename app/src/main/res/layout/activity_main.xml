


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#ffffff"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logoimg"
        android:gravity = "center"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/buttonRegister"
        android:layout_alignEnd="@+id/buttonRegister"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/imageView" />
<ImageView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:src = "@drawable/logotxt"
android:id="@+id/textView"
android:layout_gravity="center_horizontal"
    android:layout_marginTop="132dp"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true" />
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:id="@+id/linearLayout" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:text="Login"
        android:background="#800080"
        android:fontFamily="segoe UI"
        android:gravity="center"

        android:id="@+id/buttonLogin"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal"


        android:layout_marginTop="58dp"
        android:layout_below="@+id/buttonRegister"
        android:layout_alignEnd="@+id/textView" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:text="Register"
        android:background="#800080"
        android:fontFamily="segoe UI"
        android:gravity="center"

        android:id="@+id/buttonRegister"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal"


        android:layout_marginTop="118dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/buttonLogin" />




</RelativeLayout>



